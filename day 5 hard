#include <iostream>
using namespace std;

int main() {
	   int t;
	   cin>>t;
	   for(int i=1;i<=t;i++)
	   {
	       int p1,p2;
	       int n;
	       cin>>n;
	       int count=0;
	       for(int j=1;j<=n-1;j++)
	       {
	           for(int k=n;k>=n;k--)
	           {
	               count++;
	               cout<<count<<endl;
	               
	           }
	       }
	       
	   }
	return 0;
}
