///////////////////CODE 1///////////////
#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int x;
	    cin>>x;
	    int t=(x+3-1)/3;
	    int s=t*3;
	    cout<<s-x<<endl;
	}
	return 0;
}
/////////////////CODE 2//////////////////////////
#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
	double a,b;
	cin>>a>>b;
	char ch;
	cin>>ch;
	switch(ch)
	{
	    case '+' :cout<<a+b<<endl;
	              break;
	    case '-' : cout<<a-b<<endl;
	              break;
        case '*' : cout<<a*b<<endl;
                   break;
        case '/' :   cout << fixed << setprecision(7) << a/b << endl;
                   break;
                  
	}
	return 0;
}
